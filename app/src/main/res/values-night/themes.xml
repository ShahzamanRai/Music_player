<resources>
    <!-- Base application theme. -->
    <style name="Theme.Music" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:statusBarColor">@color/black</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


    <style name="Theme.Music.Font">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/surfaceColor</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Music.Single">
        <item name="android:textColor">@color/surfaceColor</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Music.FontInterface">
        <item name="android:textColor">@color/surfaceColor</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Music.IconFillColor">
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.Music.IconFillColorTransparent">
        <item name="tint">@color/white</item>
    </style>


    <style name="Theme.Music.playlist">
        <item name="android:background">@color/darkGrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.Music.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>
    
    <style name="Theme.Music.FontColor">
        <item name="android:textColor">#CCD3D5DD</item>
    </style>

    <style name="Theme.Music.FontColorDetails">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Music.FontColorPlaylist">
        <item name="android:textColor">@color/onGreen</item>
    </style>

    <style name="Theme.Music.progressBar">
        <item name="android:progressBackgroundTint">#CCD3D5DD</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:thumbTint">@color/white</item>
    </style>
</resources>