<resources>
    <!-- Base application theme. -->
    <style name="Theme.Music" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>

    <style name="Theme.Music.Font">
        <item name="background">@color/topWhite</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Music.Font.fragment">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.Music.FontColor">
        <item name="android:textColor">@color/lightBlue</item>
    </style>

    <style name="Theme.Music.Splash">
        <item name="background">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.Music.progressBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:progressTint">@color/blue</item>
        <item name="android:thumbTint">@color/blue</item>
    </style>
</resources>